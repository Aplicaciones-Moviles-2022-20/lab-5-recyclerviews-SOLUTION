<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.CatDetailsFragment">


    <TextView
        android:id="@+id/catName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="218dp"
        android:text="@string/cat_name"
        android:textSize="30sp"
        android:padding="24sp"
        app:layout_constraintBottom_toTopOf="@+id/catColor_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/catColor_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cat_color"
        android:textSize="30sp"
        android:padding="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/catName_textView" />
</androidx.constraintlayout.widget.ConstraintLayout>
